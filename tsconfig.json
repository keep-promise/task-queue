{
  "include": ["src/**/*"],
  "compilerOptions": {
    "resolveJsonModule": true,
    "stripInternal": true,
    "target": "es5",
    "module": "esnext",
    "lib": ["esnext"],
    "allowJs": true,
    "declaration": true,
    "outDir": "dist",
    "importHelpers": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}